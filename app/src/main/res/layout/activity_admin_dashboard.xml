<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminDashboard">

    <TextView
        android:id="@+id/admin_title_text"
        android:layout_width="70dp"
        android:layout_height="18dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/admin_back_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.352"
        app:layout_constraintStart_toEndOf="@+id/admin_back_btn"
        app:layout_constraintTop_toTopOf="@+id/admin_back_btn"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/admin_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.132"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

    <Button
        android:id="@+id/admin_add_product_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Product"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/admin_slider_btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admin_back_btn"
        app:layout_constraintVertical_bias="0.208" />

    <Button
        android:id="@+id/admin_slider_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Slider"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/admin_add_product_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/admin_add_product_btn"
        app:layout_constraintTop_toTopOf="@+id/admin_add_product_btn"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/admin_discount_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Discount"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/admin_recently_btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admin_add_product_btn" />

    <Button
        android:id="@+id/admin_recently_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recently"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/admin_discount_btn"
        app:layout_constraintTop_toTopOf="@+id/admin_discount_btn" />

    <Button
        android:id="@+id/admin_order_status_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="orderStatus"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/admin_order_progresss_btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admin_discount_btn" />

    <Button
        android:id="@+id/admin_order_progresss_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Progress"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/admin_order_status_btn"
        app:layout_constraintTop_toTopOf="@+id/admin_order_status_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>